{
  "name": "salesforce-lens",
  "displayName": "Salesforce Lens",
  "description": "Salesforce DevOps admin tool",
  "version": "1.0.7",
  "publisher": "amguerrero",
  "icon": "resources/icon-marketplace.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/guerrero-zone/salesforce-lens.git"
  },
  "license": "GPL v3",
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "DevOps",
    "Salesforce",
    "Salesforce Management",
    "Scratch Orgs",
    "Snapshots"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "salesforce-lens.dashboard",
        "title": "Salesforce Lens: Dashboard",
        "icon": "$(dashboard)"
      },
      {
        "command": "salesforce-lens.openScratchOrgs",
        "title": "Salesforce Lens: Open Scratch Orgs"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "salesforce-lens",
          "title": "Salesforce Lens",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "salesforce-lens": [
        {
          "type": "webview",
          "id": "salesforce-lens.dashboardView",
          "name": "Dashboard",
          "visibility": "visible"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "salesforce-lens.dashboard",
          "when": "view == salesforce-lens.dashboardView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile && pnpm run copy-webviews",
    "compile": "pnpm run copy-webviews && tsc -p ./",
    "watch": "pnpm run copy-webviews && tsc -watch -p ./",
    "copy-webviews": "node scripts/copy-webviews.js",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "pnpm run compile && pnpm run copy-webviews && vsce package --no-dependencies"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.43"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.3",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "22.14.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.9.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
